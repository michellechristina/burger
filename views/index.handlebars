
<div class="container bkg">
  <h1>Burgers!</h1>

<div class="row">
    <div class="col-md box">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>
</div>


 <div class="row">
    <div class="col-md box">
      <h2>Eat These Burgers!</h2>
<ul class="list-group">

     {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
  
</ul>
    </div>

    <div class="col-md box">
      <h2>Devoured!</h2>

<ul class="list-group">
 
  {{#each cats}}
    {{#if sleepy}}
